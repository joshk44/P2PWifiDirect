<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.fragment.app.FragmentContainerView
            android:name="com.joseferreyra.connectionp2p.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="@dimen/tablet_list_width"
            android:tag="frag_list"

            android:layout_height="match_parent" />

        <androidx.fragment.app.FragmentContainerView
            android:name="com.joseferreyra.connectionp2p.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:tag="frag_detail"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
